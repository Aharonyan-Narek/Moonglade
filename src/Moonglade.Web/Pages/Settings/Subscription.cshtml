@page "/admin/settings/subscription"
@model Moonglade.Web.Pages.Settings.SubscriptionModel

<partial name="_SettingsHeader" />
<div class="ps-4 pe-4">
    <form id="form-settings" asp-controller="Settings" asp-action="Subscription"
          data-ajax-begin="onUpdateSettingsBegin"
          data-ajax-complete="onUpdateSettingsComplete"
          data-ajax-failure="onUpdateSettingsFailed"
          data-ajax-success="onUpdateSettingsSuccess"
          data-ajax="true"
          data-ajax-method="POST"
          spellcheck="false">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row">
            <div class="col-lg-6">
                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-hr settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label asp-for="ViewModel.RssTitle"></label>
                        <div class="form-text">
                            Title on RSS/ATOM readers
                        </div>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="ViewModel.RssTitle" class="form-control"/>
                        <span asp-validation-for="ViewModel.RssTitle" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-person settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label class="form-label" asp-for="ViewModel.AuthorName"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="ViewModel.AuthorName" class="form-control" />
                        <span asp-validation-for="ViewModel.AuthorName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-check2 settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label class="form-label" asp-for="ViewModel.RssCopyright"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="ViewModel.RssCopyright" class="form-control"/>
                        <span asp-validation-for="ViewModel.RssCopyright" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-list-ol settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label asp-for="ViewModel.RssItemCount"></label>
                        <div class="form-text">@Localizer["The number of entries to include in RSS feed."]</div>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="ViewModel.RssItemCount" class="form-control" />
                        <span asp-validation-for="ViewModel.RssItemCount" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 align-items-center settings-entry mb-4">
                    <div class="col-auto">
                        <i class="bi-justify-left settings-entry-icon"></i>
                    </div>
                    <div class="col">
                        <label asp-for="ViewModel.UseFullContent" class="form-check-label"></label>
                    </div>
                    <div class="col-md-5">
                        <div class="form-check form-switch">
                            <input type="checkbox" asp-for="ViewModel.UseFullContent" class="form-check-input">
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="mb-2">
            <input id="btn-save-settings" type="submit" value="@Localizer["Save"]" class="btn btn-outline-accent" />
        </div>
    </form>
</div>