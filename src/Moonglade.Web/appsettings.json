  "ImageStorage": {
    "AllowedExtensions": [ ".png", ".jpg", ".jpeg", ".bmp", ".gif" ],
    "NoWatermarkExtensions": [ ".gif" ],
    "Provider": "filesystem",
    "AzureStorageSettings": {
      "ConnectionString": "",
      "ContainerName": ""
    },
    "FileSystemSettings": {
      "Path": "${basedir}\\UploadedImages"
    },
    "MinioStorageSettings": {
      "EndPoint": "",
      "AccessKey": "",
      "SecretKey": "",
      "BucketName": "",
      "WithSSL": false
    },
    "CDNSettings": {
      "EnableCDNRedirect": false,
      "CDNEndpoint": ""
    }
  },
  "FeatureManagement": {
    "EnableAudit": true,
    "EnableWebApi": true,
    "Widgets_TopTags": true,
    "Widgets_CategoryList": true,
    "Widgets_SubscriptionButtons": true
  },
  "AppSettings": {
    "WatermarkARGB": [ 128, 128, 128, 128 ],
    "WatermarkSkipPixel": 40000,
    "CaptchaSettings": {
      "ImageWidth": 100,
      "ImageHeight": 36
    },
    "Editor": "HTML",
    "SupportedCultures": [ "en-US", "zh-CN" ],
    "CacheSlidingExpirationMinutes": {
      "Post": 20,
      "Page": 20,
      "Image": 60
    },
    "Notification": {
      "Enabled": false,
      "AzureFunctionEndpoint": ""
    },
    "PostAbstractWords": 400,
    "SystemNavMenus": {
      "Categories": true,
      "Tags": true,
      "Archive": true
    },
    "SiteMap": {
      "UrlSetNamespace": "http://www.sitemaps.org/schemas/sitemap/0.9",
      "ChangeFreq": {
        "Posts": "monthly",
        "Pages": "monthly",
        "Default": "weekly"
      }
    },
    "Themes": [
      {
        "Name": "Word Blue",
        "CssFile": "word-blue.css"
      },
      {
        "Name": "Excel Green",
        "CssFile": "excel-green.css"
      },
      {
        "Name": "PowerPoint Orange",
        "CssFile": "powerpoint-orange.css"
      },
      {
        "Name": "OneNote Purple",
        "CssFile": "onenote-purple.css"
      },
      {
        "Name": "Outlook Blue",
        "CssFile": "outlook-blue.css"
      }
    ],
    "ManifestIcons": [
      {
        "SrcTemplate": "android-icon-{0}.png",
        "Type": "image/png",
        "Pixel": 36,
        "Density": "0.75"
      },
      {
        "SrcTemplate": "android-icon-{0}.png",
        "Type": "image/png",
        "Pixel": 48,
        "Density": "1.0"
      },
      {
        "SrcTemplate": "android-icon-{0}.png",
        "Type": "image/png",
        "Pixel": 72,
        "Density": "1.5"
      },
      {
        "SrcTemplate": "android-icon-{0}.png",
        "Type": "image/png",
        "Pixel": 96,
        "Density": "2.0"
      },
      {
        "SrcTemplate": "android-icon-{0}.png",
        "Type": "image/png",
        "Pixel": 144,
        "Density": "3.0"
      },
      {
        "SrcTemplate": "android-icon-{0}.png",
        "Type": "image/png",
        "Pixel": 192,
        "Density": "4.0"
      }
    ],
    "TagNormalization": [
      {
        "Source": ".",
        "Target": "dot"
      },
      {
        "Source": "#",
        "Target": "sharp"
      },
      {
        "Source": " ",
        "Target": "-"
      }
    ]
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/comment",
        "Period": "1s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/post/*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/statistics/*",
        "Period": "1s",
        "Limit": 5
      }
    ]
  },
  "AllowedHosts": "*"
}