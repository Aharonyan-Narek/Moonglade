@model IReadOnlyList<Moonglade.Model.Category>

@if (Model.Count > 0)
{
    <ul class="dropdown-menu category-menu">
        @foreach (var item in Model.OrderBy(c => c.DisplayName))
        {
            <li>
                <a class="dropdown-item" asp-controller="Category" asp-action="List" asp-route-routeName="@item.RouteName.ToLower()" title="@item.Note">
                    @item.DisplayName
                </a>
            </li>
        }
    </ul>
}
