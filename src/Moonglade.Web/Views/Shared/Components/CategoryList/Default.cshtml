@model IReadOnlyList<Moonglade.Core.Category>

@if (Model.Count > 0)
{
    <div class="list-group list-group-flush">
        @foreach (var item in Model.OrderBy(c => c.DisplayName))
        {
            <a class="list-group-item list-group-item-action"
               asp-controller="Home"
               asp-action="CategoryList"
               asp-route-routeName="@item.RouteName.ToLower()"
               title="@item.Note">
                @item.DisplayName
            </a>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        No Categories
    </div>
}